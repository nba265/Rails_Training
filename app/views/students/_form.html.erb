<%= form_with model: student do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% student.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :age %><br>
    <%= form.number_field :age %><br>
    <% student.errors.full_messages_for(:age).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :phone_number %><br>
    <%= form.text_field :phone_number %>
    <% student.errors.full_messages_for(:phone_number).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :grades %>
    <%= form.fields_for :grades do |g| %>
      <div >
        <%= g.label :subject %>
        <%= g.select :subject, Grade.subjects.values %>
      </div>
      <div>
        <%= g.label :score %>
        <%= g.number_field :score %>
      </div>
      <div>
        <%= g.label :semester %>
        <%= g.number_field :semester %>
      </div>
      <div>
        <%= g.label :comments %>
        <%= g.text_field :comments %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
